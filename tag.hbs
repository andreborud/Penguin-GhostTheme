{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

<nav id="tag-navigation">
    <div class="navigation-content">
        {{#if @blog.logo}}
        <img class="logo" src="{{@blog.logo}}" />{{/if}}
        <div class="titles">
            <h1>{{@blog.title}}</h1>
            <p>{{@blog.description}}</p>
        </div>
        <ul class="menu">
            <li><a href="/">Blog</a></li>
            <li><a href="/tag/portfolio">Portfolio<</li>
            <li><a href="/about">About</a></li>
        </ul>
        {{> "social"}}
    </div>
</nav>

<div id="container" role="main" class="tag-container">

      <main id="posts">

        {{> "loop"}}

      </main>
</div>
